<idea-plugin>
    <id>com.ossuminc.riddl.plugins.idea</id>
    <name>RIDDL4IDEA</name>
    <version>0.0.1</version>
    <vendor url="https://github.com/ossuminc">ossuminc</vendor>
    <idea-version since-build="IU-241.17011.79" until-build="IU-241.*"/>

    <description>A RIDDL language plugin for IntelliJ platform written in Scala and built with SBT</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="com.ossuminc.riddl.plugins.idea.settings.RiddlIdeaSettingsConfigurable"
                                 id="RIDDL_IDEA_SETTINGS"
                                 displayName="RIDDL Project Settings"/>
        <notificationGroup displayType="BALLOON" id="Riddl Plugin Notification" />
        <toolWindow factoryClass="com.ossuminc.riddl.plugins.idea.ui.RiddlToolWindowFactory"
                    id="RIDDL_TOOL_WINDOW" anchor="bottom" icon="images/RIDDL-Logo.jpg"/>
        <!-- <configurationType implementation="com.ossuminc.riddl.plugins.idea.configuration.RiddlRunConfigurationType"/> -->

    </extensions>

    <applicationListeners>
        <listener
                class="com.ossuminc.riddl.plugins.idea.settings.TopicsNotifier"
                topic="com.ossuminc.riddl.plugins.idea.settings.RiddlIdeaTopics"/>
    </applicationListeners>

</idea-plugin>
